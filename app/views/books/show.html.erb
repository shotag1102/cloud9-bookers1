<div class="container">
  <div class="row">
<%= render 'users/list', user: @book.user, book: @new %>
<div class="col-md-8  offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		  <tr>
  		    <td><%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
          <% end %>
  		 <%= link_to "#{ @book.user.name}", user_path(@book.user.id) %></td>
          <td><%= link_to "#{ @book.title}", book_path %></td>
          <td><%= @book.body %></td>
          	 <% if @book.user_id == current_user.id %>
          <td><%= link_to "Edit",  edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
         <% end %>
        </tr>
      </tbody></table>
    </div>
  </div>
  <div></div>