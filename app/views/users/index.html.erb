<div class="container">
    <div class="row">
<%= render 'users/list', user: current_user, book: @book %>
<div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
     <tr>
          <%= link_to user_path(user.id) do %>
      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
          <% end %>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
     </tr>
    <% end %>
  </tbody>
</table> 
</div>
</div>
</div>