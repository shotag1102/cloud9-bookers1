<div class="container">
 <div class="row">
<%= render 'users/list', user: @user, book: @book %>
   <div class="col-md-9 ">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
         <% @user.books.each do |book| %>
         <tr>
          <td><%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
          　 <% end %>
          <td><%= link_to "#{book.title}",book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td>コメント数<%= book.book_comments.count %></td>
        <% end %>
        </tr>
         </tbody>
      </table>
        </div>
       </div>
      </div>