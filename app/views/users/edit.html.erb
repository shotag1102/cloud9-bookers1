<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
   <% end %>
      <%= form_for(@user) do |f| %>
      <label><%= f.label :name %>
      <%= f.text_field :name %></label>
      <label><%= f.label :profile_image_id %>
      <%= f.attachment_field :profile_image %></label>
      <label><%= f.label :introduction %>
      <%= f.text_field :introduction %></label><br>
      <label><%= f.submit 'Update User' %></label>
      <% end %>
    </div>
  </div>
</div>